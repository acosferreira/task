<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @job.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @job.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_date) %>:</strong></dt>
  <dd><%= @job.estimated_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effort) %>:</strong></dt>
  <dd><%= @job.effort %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recurrency_id) %>:</strong></dt>
  <dd><%= @job.recurrency.blank? ? "N.A." : @job.recurrency.name %></dd>
  <dt><strong> Finalized?</strong></dt>
  <dd><%= check_box "status", @job.id,{:checked=>@job.status, :disabled=>true} %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_id) %>:</strong></dt>
  <dd><%= @job.job_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_task_id) %>:</strong></dt>
  <dd><%= @job.type_task_id %></dd>
</dl>
<dl>
  <%=render 'list'%>
  <%= will_paginate @jobs %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_path(@job), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_path(@job),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
